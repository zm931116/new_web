@model WebApplication2.Models.Org_viewModel


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>


<div class="container">
    <h2>Avaiblable Accommodation</h2>
    <table id="org_table" class="display">
        <thead>
            <tr>
                <th>Type</th>
                <th>Name</th>
                <th>Address</th>
                <th>Condition</th>
                <th>Available Time</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Ac)
            {
                <tr>
                    <td>Accommodation</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.org_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.org_address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.org_condition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.available_time)
                    </td>

                </tr>
            }

            @foreach (var item in Model.Fd)
            {
                <tr>
                    <td>Free Meals</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.org_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.org_address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.org_condition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.available_time)
                    </td>

                </tr>
            }

        </tbody>




    </table>



</div>

<script>
    $(document).ready(function () {
        $('#org_table').DataTable({
            "scrollY": "400px",
            "scrollCollapse": true,
            "paging": true
        });
    });
</script>


