    <script>
        sel();
        function sel() {
            $.ajax({
                type: "POST",
                url: "/DrinkingFountains/Ajax_SelData",
                data: {   disStr: $("#distance_selector").val()},
                success: function (result) {
                    var marker = [];
                    markers = [];
                    if (result) {
                        debugger
                        for (var i = 0; i < result.data.length; i++) {
                            var coords = result.data[i];
                            var latLng = new google.maps.LatLng(coords.latitude, coords.longitude);
                            marker = new google.maps.Marker({
                                position: latLng,
                                animation: google.maps.Animation.DROP,
                                map: map,
                                icon: 'http://maps.google.com/mapfiles/ms/micons/drinking_water.png'
                            });
                            markers.push(marker);
                            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                                return function () {
                                    var go_google = "Get directions";
                                    var link_name = go_google.link("https://www.google.com/maps/search/?api=1&query=" + marker.position);
                                    infowindowM.setContent(
                                        '<h4 >Description:</h4>' + coords.Description + '<br>' );
                                    infowindowM.open(map, marker);
                                };
                            })(marker, i));
                        }
                        //clear markers in the cluster
                        markerCluster.clearMarkers();
                        //add new markers and redraw the clusters and markers
                        markerCluster.addMarkers(markers);
                    }
                }
            })
        }

        function disSel() {
            //var data = { loction: myLocation };
            $.ajax({
                type: "POST",//数据发送的方式（post 或者 get）
                url: "/DrinkingFountains/Ajax_SetMylocation",//要发送的后台地址
                data: { lat: myLocation.lat, lng: myLocation.lng },//要发送的数据（参数）格式为{'val1':"1","val2":"2"}
                dataType: "json",//后台处理后返回的数据格式
                success: function (data) {//ajax请求成功后触发的方法
                    sel();
                },
                error: function (msg) {//ajax请求失败后触发的方法
                    alert(msg);//弹出错误信息
                }
            });
        }
    </script>

